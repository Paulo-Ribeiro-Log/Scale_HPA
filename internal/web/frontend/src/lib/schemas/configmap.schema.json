{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kubernetes ConfigMap",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["v1"],
      "default": "v1"
    },
    "kind": {
      "type": "string",
      "enum": ["ConfigMap"],
      "default": "ConfigMap"
    },
    "metadata": {
      "type": "object",
      "required": ["name", "namespace"],
      "properties": {
        "name": { "type": "string" },
        "namespace": { "type": "string" },
        "labels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "annotations": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "data": {
      "type": "object",
      "description": "String data entries",
      "additionalProperties": { "type": "string" }
    },
    "binaryData": {
      "type": "object",
      "description": "Binary data entries (base64)",
      "additionalProperties": { "type": "string" }
    },
    "immutable": { "type": "boolean" }
  },
  "additionalProperties": true
}
